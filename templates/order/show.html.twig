{% extends 'base.html.twig' %}

{% block title %}Commande n°{{ order.id }}{% endblock %}

{% block body %}
<div class="container" style="max-width: 800px; margin: 50px auto; padding: 30px; background-color: #fff;">
    <h1>🧾 Commande #{{ order.id }}</h1>
    <p><strong>Total :</strong> {{ order.total }} €</p>
    <p><strong>Statut :</strong> {{ order.status }}</p>
    <p><strong>Date :</strong> {{ order.createdAt|date('d/m/Y H:i') }}</p>
    <p><strong>Adresse :</strong> {{ order.address }}</p>
    <p><strong>Utilisateur :</strong> {{ order.user.fullName }}</p>

    <a href="{{ path('order_index') }}">← Retour à mes commandes</a>
</div>
{% endblock %}
